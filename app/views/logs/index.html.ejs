<% layout('../layout.html') %>
<% block('title', 'Logs') %>
<% block('subtitle', 'Logs Management') %>

<% if (! logs.length) { %>
  <div class="alert alert-block alert-error">
    <h4>Oh dear GOD!</h4>
    There aren't any logs to show you! This is impossible!
  </div>
<% } else { %>
  <div class="container logs">
    <div class="filter">
      <p>Filter by ...</p>
      <ul class="categ">
        
        <li>Module
           <ul><% logs.forEach(function(log) {%>
              <li><%= log.module_name %></li>
              <% }) %>
           </ul>
        </li>
        <li>Time
            <ul>
              <li>Day</li>
              <li>Week</li>
              <li>Month</li>
              <li>Year</li>
            </ul>
        </li>
        <li>Description
            <ul><% logs.forEach(function(log) { %>
              <li><%= log.description %></li>
              <% }) %>
            </ul>
        </li>
        <li>Username
            <ul><% logs.forEach(function(log) { %>
              <li><%= log.User.username  %></li>
              <% }) %>
            </ul>
        </li>
         
      </ul>
    </div>
    <div class="row">
      <div class="col-lg-12">
       <div class="table-responsive">
          <table class="table table-bordered table-hover tablesorter">
            <thead>
              <th>Module Name<i class="icon-sort"></i></th>
              <th>Timestamp<i class="icon-sort"></i></th>
              <th>Description<i class="icon-sort"></i></th>
              <th>Updated By<i class="icon-sort"></i></th>
            </thead>
            <tbody>
              <% logs.forEach(function(log) { %>

                <tr>
                  <td><%= log.module_name %></td>
                  <td><%= log.timestamp %></td>
                  <td><%= log.description %></td>
                  <td><%= log.User.username  %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
       </div>
      </div>
  </div>


  <% } %>
