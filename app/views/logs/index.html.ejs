<% layout('../layout.html') %>
<% block('title', 'Logs') %>
<% block('subtitle', 'Logs Management') %>

<% if (! users.length) { %>
  <div class="alert alert-block alert-error">
    <h4>Whoa!</h4>
    There aren't any users to show you! But don't worry, you can create one using that big green button on the right.
  </div>
<% } else { %>
  <div class="container logs">
    <div class="row">
      <div class="col-lg-12">
       <div class="table-responsive">
          <table class="table table-bordered table-hover tablesorter">
            <thead>
              <th>Username<i class="icon-sort"></i></th>
              <th>First Name<i class="icon-sort"></i></th>
              <th>Last Name<i class="icon-sort"></i></th>
              <th>Date Created<i class="icon-sort"></i></th>
              <th>Date Updated<i class="icon-sort"></i></th>
              <th>Update By<i class="icon-sort"></i></th>
            </thead>
            <tbody>
              <% users.forEach(function(user) { %>
                <tr>
                  <td><%= user.username %></td>
                  <td><%= user.firstname %></td>
                  <td><%= user.lastname %></td>
                  <td><%= user.createdAt %></td>
                  <td><%= user.updatedAt %></td>

              <% }) %>
            </tbody>
          </table>
        </div>
       </div>
      </div>
  </div>
  <% } %>
    <div class="container logs">
    <div class="row">
      <div class="col-lg-12">
       <div class="table-responsive">
          <table class="table table-bordered table-hover tablesorter">
            <thead>
              <th>Domain<i class="icon-sort"></i></th>
              <th>Expiry<i class="icon-sort"></i></th>
              <th>Registrar<i class="icon-sort"></i></th>
              <th>Date Created<i class="icon-sort"></i></th>
              <th>Date Updated<i class="icon-sort"></i></th>
              <th>Updated By<i class="icon-sort"></i></th>
            </thead>
            <tbody>
              <% domains.forEach(function(domain) { %>
                <tr>
                  <td><%= domain.domain %></td>
                  <td><%= domain.expiry %></td>
                  <td><%= domain.registrar %></td>
                  <td><%= domain.createdAt %></td>
                  <td><%= domain.updatedAt %></td>
              <% }) %>
            </tbody>
          </table>
        </div>
       </div>
      </div>
  </div>