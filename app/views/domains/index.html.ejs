<% layout('../layout.html') %>
<% block('title', 'domains') %>
<% block('subtitle', 'Domain Management') %>

<% if (flash.success) { %>
  <div class="alert alert-block alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4><%- flash.success[0] %></h4>
    <%- flash.success[1] %>
  </div>
<% } %>

<% if (flash.error) { %>
  <div class="alert alert-block alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4><%- flash.error[0] %></h4>
    <%- flash.error[1] %>
  </div>
<% } %>

<a href="<%= newDomainPath() %>" class="btn btn-small btn-success pull-right" style="margin: 1em 0"><i class="icon-plus icon-white"></i> Add new Domain</a>
<div style="clear:both"></div>
<% if (! domains.length) { %>
  <div class="alert alert-block alert-error">
    <h4>Whoa!</h4>
    There aren't any domains to show you! But don't worry, you can create one using that big green button on the right.
  </div>
<% } else { %>
  <div class="container">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <th>Domainname</th>
        <th>Password</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th></th>
      </thead>
      <tbody>
        <% domains.forEach(function(Domain) { %>
          <tr>
            <td><%= domains.domainsname %></td>
            <td><%= domains.password %></td>
            <td><%= domains.firstname %></td>
            <td><%= domains.lastname %></td>
            <td><%= domains.domainsname %></td>
            <td><%= domains.password %></td>
            <td><%= domains.firstname %></td>
            <td><%= domains.lastname %></td>
            <td><%= domains.domainsname %></td>
            <td><%= domains.password %></td>
            <td><%= domains.firstname %></td>
            <td><%= domains.lastname %></td>
            <td><%= domains.domainsname %></td>
            <td><%= domains.password %></td>
            <td><%= domains.firstname %></td>
            <td><%= domains.lastname %></td>
            <td><%= domains.domainsname %></td>
            <td><%= domains.password %></td>
            <td><a href="<%= editdomainPath(domains.id) %>" class="btn btn-inverse">Edit</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } %>
